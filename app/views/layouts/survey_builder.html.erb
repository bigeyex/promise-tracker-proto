<!DOCTYPE html>
<html>
  <head>
    <title><%= t("app_name") %></title>
    <%= render partial: "layouts/include_links" %>
  </head>
  
  <body>
    <div id="header">
      <div class="navbar-header header-container">
        <div id="site-title">
          <% if current_user %>
            <%= link_to campaigns_path, class: "home-button" do %>
              <%= image_tag("PT-logo.png") %>
            <% end %>
          <% else %>
            <%= link_to root_path, class: "home-button" do %>
              <%= image_tag("PT-logo.png") %>
            <% end %>
          <% end %>
          <h2 class="light inline site-title">Promise Tracker</h2>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
